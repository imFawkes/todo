<div class = "subtask" data-id = "<%= subtask.id %>">
  <div class = 'subtask-data-content'><%= subtask.content %></div>
  <div class = 'subtask-action-delete'>
    <%= link_to "Delete Subtask", task_subtask_path(subtask.task, subtask), 
        method: :delete, data: { confirm: "Are you sure?" }, remote: true %>
  </div>
</div>