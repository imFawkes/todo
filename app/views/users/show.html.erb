<h1>User: <%= @user.name %></h1>

<h2>Unsorted Tasks</h2>
<%= render partial: "tasks/new" %>
<div class = "tasks-unsorted">
  <% @user.tasks.each do |task|%>
    <% if task.lists.none? %>
      <%= render partial: "tasks/show", locals: { task: task } %>
    <% end %>
  <% end %>
</div>

<div class = "lists">
  <% @user.lists.each do |list|%>
    <%= render partial: "lists/show", locals: { list: list }%>
  <% end %>
</div>

<h2>User Lists</h2>
<%= render partial: "lists/index" %>


<h2>Profile Settings</h2>
<p><%= link_to "Edit User", edit_user_path(@user) %></p>
<p><%= link_to "Delete User", user_path(@user), method: :delete, data: { confirm: 'Are you sure?' } %></p>

<h2>Navigation</h2>
<p><%= link_to "to Users", users_path %></p>